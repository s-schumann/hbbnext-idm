<h2>UDR Management</h2>

<%= semantic_form_for @context, :html => { :class => 'form-horizontal' } do |f| %>
	<%= f.semantic_fields_for :crs do |cr| %>
      <%= cr.inputs do %>
        <%= cr.input :name, :label => "Context" %>
      	<%= cr.input :active %>
      <% end %>
    <% end %>
	<%= f.actions :class => 'form-actions' do %>
      <%= f.action :submit, :as => :button, :button_html => { :class => 'btn btn-primary' } %>
      <%= link_to 'Back', contexts_path, :class => 'btn' %>
    <% end %>
<% end %>
