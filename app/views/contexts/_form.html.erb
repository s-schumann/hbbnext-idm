<%= semantic_form_for @context, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.inputs do %>
    <%= f.input :alias, :label => "Alias" %>
    <%= f.input :display_name, :label => "Display-Name" %>
    <%= f.input :udrs, :label => "UDRs" %>
  <% end %>

  <%= f.actions :class => 'form-actions' do %>
    <%= f.action :submit, :as => :input, :button_html => { :class => 'btn btn-primary' } %>
    <%= link_to 'Back', contexts_path, :class => 'btn' %>
  <% end %>
<% end %>
