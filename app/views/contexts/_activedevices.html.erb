<% active = Array.new %>
<% context.crs.each do |relation| %>
	<% if relation.active %>
		<% gonext = false %>
		<% active.each do |n| %>
  			<% gonext = true if relation.udr.device.display_name == n %>
		<% end %>
		<% next if gonext %>
		<% active.push(relation.udr.device.display_name) %>
	<% end %>
<% end %>

<% active.each do |n| %>
  <%= n %><br />
<% end %>
