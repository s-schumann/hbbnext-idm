<h2>Details of Context #<%= @context.id %></h2>

<p id="notice"><%= notice %></p>

<p>
  <b>ID:</b>
  <%= @context.id %>
</p>

<p>
  <b>Alias:</b>
  <%= @context.alias %>
</p>

<p>
  <b>Display-Name:</b>
  <%= @context.display_name %>
</p>

<p>
  <b>UUID:</b>
  <%= @context.uuid %>
</p>

<p>
  <b>Users:</b>
  <%= render :partial => "contextusers", :locals => { :context => @context } %>
</p>

<p>
  <b>Devices:</b>
  <%= render :partial => "contextdevices", :locals => { :context => @context } %>
</p>

<p>
  <b>Active Users*:</b>
  <%= render :partial => 'activeusers', :locals => { :context => @context } %>
</p>

<p>
  <b>Active Devices*:</b>
  <%= render :partial => 'activedevices', :locals => { :context => @context } %>
</p>

<p>
  <b>Active UDRs*:</b>
  <%= render :partial => 'activeudrs', :locals => { :context => @context } %>
</p>

<p>
  <b><em>Created by:</em></b>
  <em><%= @context.created_by %></em>
</p>

<div class="form-actions">
<%= link_to 'Edit', edit_context_path(@context), :class => 'btn' %>
<%= link_to 'Back', contexts_path, :class => 'btn' %>
</div>
