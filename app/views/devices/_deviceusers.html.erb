<% device.users.each do |user| %>
	<% device.udrs.each do |udr| %>
		<% if udr.user_id == user.id %>
			<% if udr.role_id == 1 %>
	    		<b><%= user.username %></b>
	    		(<%= user.roles.find(udr.role_id).name %>)
	    	<% else %>
	    		<%= user.username %>
	    		(<%= user.roles.find(udr.role_id).name %>)
    		<% end %>
    	<% end %>
    <% end %>
<% end %>