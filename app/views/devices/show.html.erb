<h2>Details of Device #<%= @device.id %></h2>

<p id="notice"><%= notice %></p>

<p>
  <b>Alias:</b>
  <%= @device.alias %>
</p>

<p>
  <b>Display name:</b>
  <%= @device.display_name %>
</p>

<p>
  <b>UUID:</b>
  <%= @device.uuid %>
</p>

<p>
  <b>Address:</b>
  <%= @device.address %>
</p>

<p>
  <b>Users:</b>
  <%= render :partial => "deviceusers", :locals => { :device => @device } %>
</p>

<p>
  <b>Contexts:</b>
  <%= render :partial => "devicecontexts", :locals => { :device => @device } %>
</p>

<p>
  <b><em>Created by:</em></b>
  <em><%= @device.created_by %></em>
</p>

<div class="form-actions">
  <%= link_to 'Edit', edit_device_path(@device), :class => 'btn' %>
  <%= link_to 'Back', devices_path, :class => 'btn' %>
</div>
