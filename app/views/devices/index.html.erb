<h1>Listing devices</h1>

<table>
  <tr>
    <th>ID</th>
    <th>Alias</th>
    <th>Display name</th>
    <th>UUID</th>
    <th>Address</th>
    <th>Users</th>
    <th>Contexts</th>
    <th></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @devices.each do |device| %>
  <tr>
    <td><%= device.id %></td>
    <td><%= device.alias %></td>
    <td><%= device.display_name %></td>
    <td><%= device.uuid %></td>
    <td><%= device.address %></td>
    <td>
        <%= render :partial => "deviceusers", :locals => { :device => device } %>
    </td>
    <td>
        <%= render :partial => "devicecontexts", :locals => { :device => device } %>
    </td>
    <td><%= link_to 'Show', device %></td>
    <td><%= link_to 'Edit', edit_device_path(device) %></td>
    <td><%= link_to 'Destroy', device, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    <td><a href="http://<%= $currentDomain %>/api/<%= $currentVersion %>/devices/<%= device.id %>?access_token=<%= current_consumer.access_token %>">API</a></td>
  </tr>
<% end %>
</table>

<br />

