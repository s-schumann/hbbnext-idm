<%= semantic_form_for @device do |f| %>
  <%= f.inputs do %>
    <%= f.input :alias %>
    <%= f.input :display_name %>
    <%= f.input :address %>
    <%= f.input :users %>
    <%= f.semantic_fields_for :udrs do |d| %>
       <%= d.inputs :user, :role, :as => "select" %>
    <% end%>
  <% end %>

  <%= f.actions do %>
    <%= f.action :submit, :as => :input %>
  <% end %>
<% end %>
