<%= semantic_form_for @device, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.inputs do %>
    <%= f.input :alias, :label => "Alias" %>
    <%= f.input :display_name, :label => "Display-Name" %>
    <%= f.input :address, :label => "Address" %>
    <%= render "formusers", :f => f %>
  <% end %>

  <%= f.actions do %>
    <%= f.action :submit, :as => :input %>
  <% end %>
<% end %>
