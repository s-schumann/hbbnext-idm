<%= semantic_form_for @user do |f| %>
  <%= f.inputs do %>
    <%= f.input :alias %>
    <%= f.input :username %>
    <%= f.input :password %>
    <%= f.input :pin %>
    <%= f.input :devices %>
    <%= f.semantic_fields_for :udrs do |u| %>
       <%= u.inputs :device, :role, :as => "select" %>
    <% end%>
  <% end %>

  <%= f.actions do %>
    <%= f.action :submit, :as => :input %>
  <% end %>
<% end %>
